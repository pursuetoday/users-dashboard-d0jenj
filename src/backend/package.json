{
  "name": "user-management-dashboard-backend",
  "version": "1.0.0",
  "description": "Backend API for User Management Dashboard with comprehensive user administration capabilities",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon",
    "build": "tsc",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":80,\"functions\":80,\"lines\":80,\"statements\":80}}'",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "security:audit": "npm audit",
    "clean": "rimraf dist",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/security": "^1.0.0",
    "@nestjs/swagger": "^7.0.0",
    "@nestjs/throttler": "^5.0.0",
    "@prisma/client": "^5.0.0",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "latest",
    "dotenv": "^16.0.0",
    "env-validator": "^2.0.0",
    "express": "4.18.x",
    "express-error-handler": "^1.1.0",
    "express-rate-limit": "^6.8.0",
    "express-validator": "^7.0.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.0.0",
    "joi": "^17.9.0",
    "jsonwebtoken": "^9.0.0",
    "node-cache": "^5.1.2",
    "redis": "^4.6.0",
    "swagger-jsdoc": "^6.2.0",
    "swagger-ui-express": "^4.6.0",
    "token-bucket": "^2.0.0",
    "uuid": "^9.0.0",
    "validator": "^13.9.0",
    "winston": "^3.8.0",
    "winston-daily-rotate-file": "^4.7.1",
    "winston-elasticsearch": "^0.17.0",
    "yup": "^1.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.0",
    "@jest/globals": "^29.0.0",
    "@jest/types": "^29.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "4.17.x",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "9.0.x",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-security": "^1.0.0",
    "husky": "^8.0.3",
    "jest": "^29.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "prisma": "^5.0.0",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": ".ts,.js",
    "exec": "ts-node ./src/app.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts"
    ]
  }
}